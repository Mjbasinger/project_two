<body>
    <div id='wrapper'>
        <div class="pageName">
            <h1>All Known Kaiju</h1>
        </div>
        <div class='dropdown'>
        <button class="dropButton">
            <div class="icon"></div>
            <div class="icon"></div>
            <div class="icon"></div>
          </button>
          <div class="dropContent">
            <ul>
                    <a href="/">Home</a>
                    <a href="/kaijus/new">Add New Kaiju</a>
                    <a href="">My Profile</a>
            </ul>
        </div>
        </div>

       
                <% for(let i = 0; i < kaijus.length; i++) { %>
                <div class="allKaiju">
                
                    <button class='btn btn-primary'
                        onclick="window.location.href='/kaijus/<%= kaijus[i]._id %>'"><%= kaijus[i].name %></button>
                    <div>
                    <img class='allImage' src="<%= kaijus[i].image %>">
                    </div>
                    <div>
                    <form action="/kaijus/<%= kaijus[i]._id %>?_method=DELETE" method="POST">
                        <button class='btn btn-primary' type="submit" value="DELETE"> Delete </button>
                    </form>

                    <button class="btn btn-primary"
                        onclick="window.location.href='/kaijus/<%= kaijus[i]._id %>/edit'">Edit</button>
                    <hr>
                </div>
                </div>
                <% } %>
         
    
</body>
