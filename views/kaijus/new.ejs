            <input class='addForm' type="number" name="size" placeholder="approx. size"> <br>
            <input class='addForm' type="number" name="weight" placeholder="approx. weight"> <br>
            <input class='addForm' type="text" name="firstSeen" placeholder="first seen location"> <br>
            <input class='addForm' type="text" name="lastSeen" placeholder="last known location"> <br>
            <input class='addForm' type="URL" name="image" placeholder="image url"> <br>
            <textarea name="notes" placeholder="notable info"></textarea> <br>
            <input class='btn-primary addKaijuBtn' type="submit" value="Add Kaiju">
        </form>
</div>
