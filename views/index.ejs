            <ul>
            <h1>kaiju tracker</h1>
                <button class="btn btn-primary" onclick="window.location.href='/kaijus'"><li>All Kaiju</li></button>
                <button class="btn btn-primary" onclick="window.location.href='/kaijus/new'"><li>Add New</li></button>
        <% if(logged) { %>
                <button class="btn btn-primary"><a href="/users/logout">Logout</a></button>
                <li><%= username %></li>
